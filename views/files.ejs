<%- include("partials/header.ejs")%>
  <h3>Biblioteca digital</h3>
  <p>Bienvenido <%= user.name %></p>
  <form action="/login/logout" method="POST">
    <button type="submit" class="btn btn-primary">Cerrar sesi√≥n</button>
  </form>
  <form action="/files/search" method="post">
    <input type="text" id="filename" name="filename" placeholder="Buscar">
    <button type="submit">Buscar</button>
  </form>
  <% if(!main) {%>
  <a href="/files">Catalogo</a>
  <% } %>
  <% if(user.role=="admin") { %>
    <a href="/admin/users">Usuarios</a>
    <a href="/admin/files">Archivos</a>
  <% } %>
  <table>
    <thead>
      <tr>
        <th>Filename</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody>
      <% filesData.forEach((file) => { %>
        <tr>
          <td><%= file.filename %></td>
          <td><a href="<%= file.url %>"  target="_blank"><%= file.url %></a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <%- include("partials/footer.ejs")%>
