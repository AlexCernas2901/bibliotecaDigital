<% } %>
<table>
  <thead>
    <tr>
      <th>Archivo</th>
    </tr>
  </thead>
  <tbody>
    <% filesData.forEach((file) => { %>
    <tr>
      <td>
        <a href="<%= file.url %>" target="_blank"><%= file.tittle %>.pdf</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
